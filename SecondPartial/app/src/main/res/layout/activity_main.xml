<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jesusalvizo.secondpartial.MainActivity">

    <TextView
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/n2"
        android:layout_alignBottom="@+id/n2"
        android:layout_toEndOf="@+id/n2"
        android:textSize="25dp"
        android:textColor="#000000" />

    <TextView
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/n1"
        android:layout_alignBottom="@+id/n1"
        android:layout_toEndOf="@+id/n1"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n2"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView"
        android:textAlignment="center" />

    <Button
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="START"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/strButton"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView13"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Correct:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toStartOf="@+id/n2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/button2"
        android:textAlignment="center" />

    <TextView
        android:text="Incorrect:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="Time left:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_below="@+id/strButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Solve the following additions:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:text="NEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nxtBtn"
        android:layout_above="@+id/textView12"
        android:layout_toStartOf="@+id/textView12"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:textAlignment="center" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_width="80dp"
        android:id="@+id/ansTxt"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView2" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/timerSeekBar"
        android:visibility="invisible" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="00:30"
        android:ems="10"
        android:id="@+id/timerTextView"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:ignore="HardcodedText"
        android:layout_width="110dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toStartOf="@+id/ansTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:text="Number"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/ansTxt"
        android:layout_alignBottom="@+id/ansTxt"
        android:layout_alignParentStart="true" />
</RelativeLayout>
